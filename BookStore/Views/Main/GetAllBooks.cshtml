@model BookStore.Models.ViewModels.MainView

@{
    ViewBag.Title = "GetAllBooks";
    Layout = "~/Views/Shared/_LayoutBookShop.cshtml";
}

<div><button class="btn btn-info" onclick="(window.location.href='http://localhost:63085/Main/AddBook')">AddBook</button></div>

@foreach (var book in @Model.BookList)
{
    <div id="books" class="flex-box-content">
        <div class="book-author">@book.Author.Name @book.Author.LastName</div>
        <div class="book-title">@book.Title</div>
        <div class="book-year">@book.Year</div>
        <div class="book-page-count">@book.PageCount</div>
        <div class="book-isbn">@book.ISBN</div>
        <div class="book-hardcover">@book.Hardcover</div>
        <div class="book-language">@book.Language.Name</div>
        <div class="book-update"><button class="btn btn-warning btn-sm" onclick="window.location.href='http://localhost:63085/Main/EditBook?id=@book.Id'">Edit</button></div>
        <div class="book-delete"><button data-book-id="@book.Id" class="btn btn-danger btn-sm js-delete">Delete</button></div>
    </div>
}

    <div class="pagination pagination-custom"></div>

@section GetAllBooksScript
{
    <script>
        $(document).ready(function () {
            $("#books .js-delete").on("click", function () {
                var button = $(this);

                if (confirm("Delete?")) {
                    $.ajax({
                        url: "/api/books/" + button.attr("data-book-id"),
                        method: "DELETE",
                        success: function () {
                            button.parent("div").parent("div").remove();
                        }
                    })
                }
            });
        });

        $(document).ready(function () {
            var pagesCount = parseInt((@Model.ListSize) / 10 + 1);

            $(".pagination").append('<a class="page-link" href="http://localhost:63085/Main/GetAllBooks?pageNumber=1"><<</a>');
            for (i = 0; i < pagesCount; i++) {
                $(".pagination").append('<a class="page-link" href="http://localhost:63085/Main/GetAllBooks?pageNumber=' + (i + 1) + '">' + (i + 1) + '</a>');
            }
            $(".pagination").append('<a class="page-link" href="http://localhost:63085/Main/GetAllBooks?pageNumber=' + pagesCount + '">>></a>');
        });
    </script>
}


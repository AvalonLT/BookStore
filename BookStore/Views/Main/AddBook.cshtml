@model BookStore.Models.ViewModels.BookView

@{
    ViewBag.Title = "AddBook";
    Layout = "~/Views/Shared/_LayoutBookShop.cshtml";
}

<div class="add-book">
    @if (@Model.Book == null)
    {
        <h2>New book</h2>
    }
    else
    {
        <h2>Edit book</h2>
    }

    @using (Html.BeginForm("CreateBook", "Main"))
    {
        <div class="form-group">
            @Html.LabelFor(b => b.Book.Author.Name)
            @Html.TextBoxFor(b => b.Book.Author.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.Book.Author.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Book.Author.LastName)
            @Html.TextBoxFor(b => b.Book.Author.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.Book.Author.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Book.Title)
            @Html.TextBoxFor(b => b.Book.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.Book.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Book.Year)
            @Html.TextBoxFor(b => b.Book.Year, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Book.PageCount)
            @Html.TextBoxFor(b => b.Book.PageCount, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Book.ISBN)
            @Html.TextBoxFor(b => b.Book.ISBN, new { @class = "form-control", placeholder = "4587-9652" })
        </div>
        <div class="form-group">
            @Html.LabelFor(b => b.Book.LanguageId)
            @Html.DropDownListFor(b => b.Book.LanguageId, new SelectList(Model.Languages, "Id", "Name"), "Select Language", new { @class = "form-control" })
        </div>

        <div class="form-group form-check">
            @Html.CheckBoxFor(b => b.Book.Hardcover, new { @class = "form-check-input" })
            @Html.LabelFor(b => b.Book.Hardcover)
        </div>

        <div>
            @if (@Model.Book != null)
            {
                @Html.HiddenFor(b => b.Book.Id)
                @Html.HiddenFor(b => b.Book.AuthorId)
            }
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
</div>

@section AddBook
{
    <script type="text/javascript" src="~/Scripts/BookStore/AddBook.js"></script>
}






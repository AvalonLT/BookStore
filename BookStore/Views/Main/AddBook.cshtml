@model BookStore.Models.Book

@{
    ViewBag.Title = "AddBook";
    Layout = "~/Views/Shared/_LayoutBookShop.cshtml";
}

@if (@Model == null)
{
    <h2>New book</h2>
}
else
{
    <h2>Edit book</h2>
}

@using (Html.BeginForm("CreateBook", "Main"))
{
    <div class="form-group">
        @Html.LabelFor(b => b.Author.Name)
        @Html.TextBoxFor(b => b.Author.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Author.LastName)
        @Html.TextBoxFor(b => b.Author.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Title)
        @Html.TextBoxFor(b => b.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Year)
        @Html.TextBoxFor(b => b.Year, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.PageCount)
        @Html.TextBoxFor(b => b.PageCount, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.ISBN)
        @Html.TextBoxFor(b => b.ISBN, new { @class = "form-control" })
    </div>
    <div>
        @Html.HiddenFor(b => b.Id)
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}




